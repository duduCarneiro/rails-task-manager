<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed  %>
<p><%= 'This task is completed.' %></p>
<% else %>
<p><%= 'This task is not completed yet.' %></p>
<% end %>

<%= link_to "Edit #{@task.title} ", task_edit_path %>
<%= link_to "Delete #{@task.title} ",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= link_to "Back", tasks_path %>

